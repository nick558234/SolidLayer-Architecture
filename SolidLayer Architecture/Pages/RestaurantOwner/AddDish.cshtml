@page
@model SolidLayer_Architecture.Pages.RestaurantOwner.AddDishModel
@{
    ViewData["Title"] = "Add New Dish";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Add New Dish</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> @Model.StatusMessage
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label asp-for="Dish.Name" class="form-label">Dish Name*</label>
                            <input asp-for="Dish.Name" class="form-control" required />
                            <span asp-validation-for="Dish.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Dish.Description" class="form-label">Description</label>
                            <textarea asp-for="Dish.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Dish.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Dish.HealthFactor" class="form-label">Health Factor (0-100)</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="number" asp-for="Dish.HealthFactor" class="form-control" min="0" max="100" value="50" />
                                </div>
                                <div class="col-md-6">
                                    <select id="healthFactorSelect" class="form-select" onchange="updateHealthFactor(this.value)">
                                        <option value="">Or choose level...</option>
                                        <option value="100">Very Healthy (100)</option>
                                        <option value="75">Healthy (75)</option>
                                        <option value="50">Moderate (50)</option>
                                        <option value="25">Less Healthy (25)</option>
                                        <option value="0">Unhealthy (0)</option>
                                    </select>
                                </div>
                            </div>
                            <small class="form-text text-muted">0 = Unhealthy, 100 = Very Healthy</small>
                            <span asp-validation-for="Dish.HealthFactor" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Dish.Photo" class="form-label">Photo URL</label>
                            <input asp-for="Dish.Photo" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="Dish.Photo" class="text-danger"></span>
                            <div class="form-text">Enter a direct URL to an image of your dish</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Dashboard" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add Dish</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function updateHealthFactor(value) {
            if (value) {
                document.getElementById('Dish_HealthFactor').value = value;
            }
        }
    </script>
}
