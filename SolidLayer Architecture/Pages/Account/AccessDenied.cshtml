@page
@model SolidLayer_Architecture.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-shield-x me-2"></i> Access Denied</h2>
                </div>
                <div class="card-body text-center">
                    <div class="display-1 text-danger mb-4">
                        <i class="bi bi-lock-fill"></i>
                    </div>
                    
                    <h3>You do not have permission to access this resource.</h3>
                    <p class="lead text-muted mt-3">
                        You are signed in as <strong>@User.Identity?.Name</strong>, but you need additional permissions to access this page.
                    </p>
                    
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="bi bi-house-door"></i> Back to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
