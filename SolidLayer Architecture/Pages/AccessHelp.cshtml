@page
@model SolidLayer_Architecture.Pages.AccessHelpModel
@{
    ViewData["Title"] = "Access Help";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Swipe2Try Access Help</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5><i class="bi bi-info-circle-fill"></i> Admin Access Instructions</h5>
                        <p>Use these tools to fix admin access issues or reset your credentials.</p>
                    </div>

                    <div class="list-group mb-4">
                        <a href="/Setup" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="bi bi-wrench me-2"></i> System Setup</h5>
                                <p class="mb-0 text-muted">Access system configuration tools</p>
                            </div>
                            <span class="badge bg-primary rounded-pill"><i class="bi bi-arrow-right"></i></span>
                        </a>
                        
                        <a href="/Admin/AdminDiagnostics" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="bi bi-shield-lock me-2"></i> Admin Account Diagnostics</h5>
                                <p class="mb-0 text-muted">Fix admin account issues</p>
                            </div>
                            <span class="badge bg-primary rounded-pill"><i class="bi bi-arrow-right"></i></span>
                        </a>
                        
                        <a href="/Admin/UserDiagnostics" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h5><i class="bi bi-people me-2"></i> User Management</h5>
                                <p class="mb-0 text-muted">Manage user accounts and roles</p>
                            </div>
                            <span class="badge bg-primary rounded-pill"><i class="bi bi-arrow-right"></i></span>
                        </a>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Quick Admin Reset</h5>
                        </div>
                        <div class="card-body">
                            <form action="/Admin/AdminDiagnostics?handler=ForceCreateAdmin" method="post">
                                <p>Reset the admin account with these credentials:</p>
                                <ul>
                                    <li><strong>Email:</strong> admin@swipe2try.com</li>
                                    <li><strong>Password:</strong> admin123</li>
                                </ul>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-key"></i> Reset Admin Account
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning">
                        <h5><i class="bi bi-exclamation-triangle-fill"></i> Security Notice</h5>
                        <p>These pages provide unrestricted access to administrative functions. For security purposes:</p>
                        <ul class="mb-0">
                            <li>Use these tools only when needed to restore access</li>
                            <li>Disable or password-protect these pages in production environments</li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/" class="btn btn-secondary">
                        <i class="bi bi-house"></i> Back to Home
                    </a>
                    <a href="/Account/Login" class="btn btn-primary float-end">
                        <i class="bi bi-box-arrow-in-right"></i> Go to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
